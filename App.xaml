<Application x:Class="HotelPairs.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HotelPairs"
             StartupUri="View/LoginWindow.xaml">
    <Application.Resources>
        <Style x:Key="LabelStyle">
            <Setter Property="TextBlock.HorizontalAlignment" Value="Center"/>
            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
            <Setter Property="TextBlock.Foreground" Value="DarkGray"/>
            <Setter Property="TextBlock.FontSize" Value="35px"/>
        </Style>
        <Style x:Key="TextBlockStyle">
            <Setter Property="TextBlock.HorizontalAlignment" Value="Left"/>
            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
            <Setter Property="TextBlock.Foreground" Value="DarkGray"/>
            <Setter Property="TextBlock.FontSize" Value="25px"/>
            <Setter Property="TextBlock.Margin" Value="10px 5"/>
        </Style>
        <Style x:Key="TextBoxStyle">
            <Setter Property="TextBox.HorizontalAlignment" Value="Center"/>
            <Setter Property="TextBox.VerticalAlignment" Value="Center"/>
            <Setter Property="TextBox.FontSize" Value="20px"/>
            <Setter Property="TextBox.Width" Value="250px"/>
        </Style>
        <Style x:Key="ButtonStyle">
            <Setter Property="Button.HorizontalAlignment" Value="Center"/>
            <Setter Property="Button.VerticalAlignment" Value="Center"/>
            <Setter Property="Button.FontSize" Value="20px"/>
            <Setter Property="Button.Width" Value="250px"/>
            <Setter Property="Button.Height" Value="35px"/>
            <Setter Property="Button.Foreground" Value="DarkBlue"/>
            <Setter Property="Button.Background" Value="AliceBlue"/>
        </Style>
        <Style x:Key="CheckBoxStyle">
            <Setter Property="CheckBox.FontSize" Value="25px"/>
            <Setter Property="CheckBox.Foreground" Value="DarkGray"/>
            <Setter Property="TextBox.HorizontalAlignment" Value="Center"/>
            <Setter Property="TextBox.VerticalAlignment" Value="Center"/>
            <Setter Property="CheckBox.FontSize" Value="20px"/>
            <Setter Property="CheckBox.Width" Value="250px"/>
            <Setter Property="CheckBox.Margin" Value="5"/>

        </Style>
    </Application.Resources>
</Application>
